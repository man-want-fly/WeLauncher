<Window x:Class="WeLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WeLauncher" Height="600" Width="900">
    <Grid>
        <ItemsControl ItemsSource="{Binding Apps}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Margin="8" Padding="10" BorderBrush="Gray" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontSize="16"/>
                            <TextBlock Text="{Binding Version}" Margin="0,4,0,0"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="安装" Command="{Binding DataContext.InstallCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                                <Button Content="启动" Margin="8,0,0,0" Command="{Binding DataContext.LaunchCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
